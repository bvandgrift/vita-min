<% @main_heading = "How would you like to send a link?" %>

<% content_for :page_title, @main_heading %>

<% content_for :main do %>
  <section class="slab slab--white">
    <div class="grid">
      <div class="grid__item width-three-fourths shift-one-eighth">
        <main role="main">
          <div class="form-card">

            <div class="question__illustration">
              <% if illustration_path.present? %>
                <%= image_tag("questions/#{illustration_path}", alt: "") %>
              <% end %>
            </div>

            <h1 class="form-question">
              <%= @main_heading %>
            </h1>

            <%= link_to job_count_questions_path, class: "button button--primary" do %>
              Continue
            <% end %>
          </div>
        </main>
      </div>
    </div>
  </section>
<% end %>